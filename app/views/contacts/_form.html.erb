<%= form_for @contact do |f| %>
    <div class="field">
        <%= f.label :name, class: 'label' %>
        <%= f.text_field :name, class: 'input' %>
    </div>
    <div class="field">
        <%= f.label :phone, class: 'label' %>
        <%= f.phone_field :phone, class: 'input' %>
    </div>

    <div class="control">
        <%= f.submit "Save", class: 'button is-primary' %>
    </div>
<% end %>